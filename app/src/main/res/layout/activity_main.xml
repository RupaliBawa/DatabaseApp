<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cosmicLatte"
    tools:context="com.example.hp.databaseapp.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/cafeNoir"
            android:textColor="@color/cosmicLatte"
            android:layout_marginTop="92dp"
            android:text="Add" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:background="@color/caputMortuum"
            android:textColor="@color/cosmicLatte"
            android:layout_below="@+id/button"
            android:layout_marginTop="30dp"
            android:text="Show" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cosmicLatte"
            android:background="@color/cafeAuLait"
            android:layout_alignStart="@+id/button2"
            android:layout_below="@+id/button2"
            android:layout_marginTop="30dp"
            android:text="Delete" />

        <Button
            android:id="@+id/button4"
            android:textColor="@color/cosmicLatte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button3"
            android:background="@color/camel"
            android:layout_below="@+id/button3"
            android:layout_marginTop="30dp"
            android:text="Update" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
